<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners
                android:radius="@dimen/button_corner_radius"/>
            <stroke
                android:color="@color/accent"
                android:width="@dimen/button_border_width"/>
            <padding
                android:left="@dimen/button_horizontal_padding"
                android:right="@dimen/button_horizontal_padding"/>

        </shape>
    </item>
    <item android:state_pressed="true">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners
                android:radius="@dimen/button_corner_radius"/>
            <stroke
                android:color="@color/accent"
                android:width="@dimen/button_border_width_pressed"/>
            <padding
                android:left="@dimen/button_horizontal_padding"
                android:right="@dimen/button_horizontal_padding"/>
            <solid
                android:color="@color/divider"/>

        </shape>
    </item>
</selector>
